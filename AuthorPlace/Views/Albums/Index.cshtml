@model List<AlbumViewModel>
<div class="row">
    <div class="col-md-9">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="col-md-3 d-flex align-items-center">
        <form asp-controller="Albums" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control input" name="search" placeholder="Search..." />
                <button class="btn btn-outline-info"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </form>
    </div>
</div>
<div class="row my-3">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <a class="link-info link-underline-opacity-0 link-underline-opacity-25-hover bold" asp-route-orderby="Title" asp-route-ascending="true">Title</a>
    </div>
    <div class="col-md-2">
        <a class="link-info link-underline-opacity-0 link-underline-opacity-25-hover bold" asp-route-orderby="Rating" asp-route-ascending="true">Rating</a>
    </div>
    <div class="col-md-2">
        <a class="link-info link-underline-opacity-0 link-underline-opacity-25-hover bold" asp-route-orderby="CurrentPrice" asp-route-ascending="true">Price</a>
    </div>
    <div class="col-md-2"></div>
</div>
@foreach (AlbumViewModel album in Model)
{
    <hr>
    <div class="row album my-3">
        <div class="col-md-1">
            <img src="@album.ImagePath" height="52" width="52" alt="@album.Title">
        </div>
        <div class="col-md-5">
            <h2>@album.Title</h2>
            <author>by @album.Author</author>
        </div>
        <div class="col-md-2 rating" title="@album.Rating">
        @for (int i = 1; i <= 5; i++)
        {
            if (album.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if (album.Rating > i - 1)
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }
        }
        </div>
        <div class="col-md-2 price">
        @album.CurrentPrice
        @if (!album.CurrentPrice!.Equals(album.FullPrice!))
        {
            <br>
            <s>@album.FullPrice</s>
        }
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-info" asp-action="Detail" asp-controller="Albums" asp-route-id="@album.Id">
                Album nr @album.Id
            </a>
        </div>
    </div>
}
<hr>
<nav class="my-5">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="1">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="2">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="3">3</a>
        </li>
        <li class="page-item">
            <a class="page-link">
                <i class="fa-solid fa-arrow-right"></i>
            </a>
        </li>
    </ul>
</nav>