@model AlbumVoteInputModel
@{
    Layout = "_LayoutMinimal";
}
<form asp-action="Vote" asp-route-id="@Model.Id" method="post" class="text-center" target="_top">
    @for (int i = 1; i <= 5; i++)
    {
        <button name="Vote" type="submit" class="border-0 bg-transparent mx-0 display-4 text-warning" value="@i" onmouseover="highlightVote(@i)" onmouseout="resetVote()">
            <i class="far fa-star"></i>
        </button>
    }
</form>
<script>
    function highlightVote(vote) {
        const buttons = document.querySelectorAll('button[name="Vote"]');
        buttons.forEach((button, index) => {
            const starIcon = button.querySelector('i');
            if (index < vote) {
                starIcon.classList.remove('far');
                starIcon.classList.add('fas');
            } else {
                starIcon.classList.remove('fas');
                starIcon.classList.add('far');
            }
        });
    }
    function resetVote() {
        highlightVote(@Model.Vote);
    }
    resetVote();
</script>