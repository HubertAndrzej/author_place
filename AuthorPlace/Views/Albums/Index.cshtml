<h1>Album catalogue</h1>
@for (int i = 1; i <= 10; i++)
{
<hr>
<div class="row album">
    <div class="col-md-1">
        <img src="~/placeholder.jpg" width="80">
    </div>
    <div class="col-md-5">
        <h2>Album's title</h2>
        <author>by Author</author>
    </div>
    <div class="col-md-2 rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
    </div>
    <div class="col-md-2 price">
        EUR 17.99
        <br>
        <s>EUR 19.99</s>
    </div>
    <div class="col-md-2">
            <a class="btn btn-outline-info" asp-action="Detail" asp-controller="Albums" asp-route-id="@i">Album nr @i</a>
    </div>
</div>
}