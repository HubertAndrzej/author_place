@model AlbumViewModel
<hr>
<div class="row album my-3">
    <div class="col-md-1">
        <img src="@Model.ImagePath" height="60" width="60" alt="@Model.Title">
    </div>
    <div class="col-md-5">
        <h2>@Model.Title</h2>
        <author>by @Model.Author</author>
    </div>
    <div class="col-md-2 rating" title="@Model.Rating">
        <rating value="@Model.Rating"></rating>
    </div>
    <div class="col-md-2 price">
        <price current-price="@Model.CurrentPrice" full-price="@Model.FullPrice"></price>
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-info" asp-action="Detail" asp-controller="Albums" asp-route-id="@Model.Id">
            Album Details
        </a>
    </div>
</div>