{
  "Albums": {
    "PerPage": 10,
    "InHome": 5,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": [ "Id", "Title", "Rating", "CurrentPrice" ]
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source = Data/AuthorPlace.db"
  },
  "Authentication": {
    "Facebook": {
      /*
      "AppId": "FACEBOOK APP ID",
      "AppSecret": "FACEBOOK APP SECRET"
      */
    }
  },
  "CacheDuration": {
    "Duration": 60
  },
  "ImageSize": {
    "Width": 300,
    "Height": 300
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 26214400
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PayPal": {
    /*
    "ClientId": "PAYPAL CLIENT ID",
    "Secret": "PAYPAL SECRET",
    */
    "IsSandbox": true,
    "BrandName": "AuthorPlace"
  },
  "ReCaptcha": {
    /*
    "SiteKey": "GOOGLE SITE KEY",
    "SecretKey": "GOOGLE SECRET KEY"
    */
    "Version": "v2"
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": [ "page" ]
    }
  },
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "restrictedToMinimumLevel": "Warning",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "Smtp": {
    "Host": "sandbox.smtp.mailtrap.io",
    "Port": 2525,
    "Security": "None",
    /*
    "Username": "SMTP USERNAME",
    "Password": "SMTP PASSWORD",
    */
    "Sender": "AuthorPlace <noreply@example.org>"
  },
  "Stripe": {
    /*
    "SecretKey": "STRIPE SECRET KEY"
    */
  },
  "Users": {
    "AssignAdministratorRoleOnRegistration": "hub.sobo@test.com"
  }
}
