@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager
@if (signInManager.IsSignedIn(User))
{
    ApplicationUser applicationUser = await userManager.GetUserAsync(User);
    <ul class="navbar-nav ml-auto mb-lg-0">
        <li class="nav-item">
            <a class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index">Welcome @applicationUser.FullName</a>
        </li>
        <li class="nav-item">
            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button class="nav-link active" type="submit">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link active" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}