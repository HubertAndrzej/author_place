@model AlbumSubscriptionViewModel
@{
    Layout = "_LayoutMinimal";
}
<a class="navbar-brand" asp-controller="Home" asp-action="Index">
    <img src="~/logo.png" height="60" alt="AuthorPlace Logo">
</a>
<h1>Purchase receipt</h1>
<p>We would like to thank you for having purchased one of our albums! Below are the details of your purchase:</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Album title</th>
            <th scope="col" class="text-right">Amount paid</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Title<</td>
            <td class="text-right">@Model.Paid</td>
        </tr>
    </tbody>
</table>
<h2>Transaction details</h2>
<p>The payment was made on <strong>@Model.PaymentDate</strong> UTC via <strong>@Model.PaymentType</strong>. Transaction Id: <strong>@Model.TransactionId</strong></p>
<h2>Customer service</h2>
<p>If you want to request a refund, please write an email to <a href="mailto:refund@authorplace.ext">refund@authorplace.ext</a></p>