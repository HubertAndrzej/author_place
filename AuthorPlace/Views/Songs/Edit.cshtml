@model SongUpdateInputModel
<section>
    <form method="post">
        <input type="hidden" asp-for="RowVersion" />
        <div class="row">
            <div class="col-md-9">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-md-3 d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-outline-info mx-4"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                <button type="button" class="btn btn-outline-danger mx-4"><i class="fa-solid fa-trash-can"></i> Delete</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" asp-validation-summary="All"></div>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group my-4">
                    <label class="display-label" asp-for="Title"></label>
                    <input type="text" class="form-control form-control-lg input" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group my-4">
                    <label class="display-label" asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control input" data-summernote rows="18"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group my-4">
                    <label class="display-label" asp-for="Duration"></label>
                    <input type="text" class="form-control form-control-lg input" asp-for="Duration" pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]" title="Please enter duration in hh:mm:ss format">
                    <span asp-validation-for="Duration"></span>
                </div>
            </div>
        </div>
    </form>
</section>
<partial name="_Validation"></partial>
<partial name="_Summernote"></partial>