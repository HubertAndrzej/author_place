@model AlbumListViewModel
<div class="row">
    <div class="col-md-9">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="col-md-3 d-flex align-items-center">
        <form asp-controller="Albums" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control input" name="search" value="@Model.Input!.Search" placeholder="Search..." />
                <button class="btn btn-outline-info"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </form>
    </div>
</div>
<div class="row my-3">
    <div class="col-md-1"></div>
    <div class="col-md-5"><order-link order-by="Title" Input="@Model.Input">Titolo</order-link></div>
    <div class="col-md-2"><order-link order-by="Rating" Input="@Model.Input">Valutazione</order-link></div>
    <div class="col-md-2"><order-link order-by="CurrentPrice" Input="@Model.Input">Prezzo</order-link></div>
    <div class="col-md-2"></div>
</div>
@foreach (AlbumViewModel album in Model.Albums!.Results!)
{
    <hr>
    <div class="row album my-3">
        <div class="col-md-1">
            <img src="@album.ImagePath" height="52" width="52" alt="@album.Title">
        </div>
        <div class="col-md-5">
            <h2>@album.Title</h2>
            <author>by @album.Author</author>
        </div>
        <div class="col-md-2 rating" title="@album.Rating">
            <rating value="@album.Rating"></rating>
        </div>
        <div class="col-md-2 price">
        <price current-price="@album.CurrentPrice" full-price="@album.FullPrice"></price>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-info" asp-action="Detail" asp-controller="Albums" asp-route-id="@album.Id">
                Album Details
            </a>
        </div>
    </div>
}
<hr>
<vc:pagination-bar model="@Model"></vc:pagination-bar>